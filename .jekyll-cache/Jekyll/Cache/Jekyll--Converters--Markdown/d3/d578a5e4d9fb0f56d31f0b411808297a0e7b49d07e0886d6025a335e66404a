<span class="nt">&lt;script </span><span class="na">type=</span><span class="s">"text/javascript"</span> <span class="na">src=</span><span class="s">"http://code.jquery.com/jquery-1.4.3.min.js"</span><span class="nt">&gt;&lt;/script&gt;</span>
