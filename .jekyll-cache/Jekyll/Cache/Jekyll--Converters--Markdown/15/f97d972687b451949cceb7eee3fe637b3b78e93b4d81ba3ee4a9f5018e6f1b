	<span class="nl">background</span><span class="p">:</span> <span class="m">#777</span><span class="p">;</span>
	<span class="nl">-webkit-border-radius</span><span class="p">:</span> <span class="m">5px</span><span class="p">;</span>
	<span class="nl">-moz-border-radius</span><span class="p">:</span> <span class="m">5px</span><span class="p">;</span>
	<span class="nl">border-radius</span><span class="p">:</span> <span class="m">5px</span><span class="p">;</span>
	<span class="nl">-webkit-box-shadow</span><span class="p">:</span> <span class="m">1px</span> <span class="m">2px</span> <span class="m">1px</span> <span class="n">rgba</span><span class="p">(</span><span class="m">0</span><span class="p">,</span> <span class="m">0</span><span class="p">,</span> <span class="m">0</span><span class="p">,</span> <span class="m">0.1</span><span class="p">);</span>
	<span class="nl">-moz-box-shadow</span><span class="p">:</span> <span class="m">1px</span> <span class="m">2px</span> <span class="m">1px</span> <span class="n">rgba</span><span class="p">(</span><span class="m">0</span><span class="p">,</span> <span class="m">0</span><span class="p">,</span> <span class="m">0</span><span class="p">,</span> <span class="m">0.1</span><span class="p">);</span>
