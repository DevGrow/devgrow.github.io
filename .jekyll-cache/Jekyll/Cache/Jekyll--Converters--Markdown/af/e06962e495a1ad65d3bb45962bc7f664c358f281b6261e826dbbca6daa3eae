	<span class="nl">padding</span><span class="p">:</span> <span class="m">5px</span> <span class="m">10px</span><span class="p">;</span>
	<span class="nl">display</span><span class="p">:</span> <span class="nb">inline</span><span class="p">;</span>
	<span class="nl">background</span><span class="p">:</span> <span class="m">#777</span> <span class="sx">url(button.png)</span> <span class="nb">repeat-x</span> <span class="nb">bottom</span><span class="p">;</span>
	<span class="nl">border</span><span class="p">:</span> <span class="nb">none</span><span class="p">;</span>
