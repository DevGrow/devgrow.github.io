	<span class="p">}</span>
<span class="nc">.button</span><span class="nd">:active</span> <span class="p">{</span>
	<span class="nl">background-position</span><span class="p">:</span> <span class="m">0</span> <span class="nb">top</span><span class="p">;</span>
