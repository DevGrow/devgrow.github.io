	<span class="nl">cursor</span><span class="p">:</span> <span class="nb">pointer</span><span class="p">;</span>
	<span class="nl">font-weight</span><span class="p">:</span> <span class="nb">bold</span><span class="p">;</span>
	<span class="nl">border-radius</span><span class="p">:</span> <span class="m">5px</span><span class="p">;</span>
	<span class="nl">-moz-border-radius</span><span class="p">:</span> <span class="m">5px</span><span class="p">;</span>
	<span class="nl">-webkit-border-radius</span><span class="p">:</span> <span class="m">5px</span><span class="p">;</span>
	<span class="nl">text-shadow</span><span class="p">:</span> <span class="m">1px</span> <span class="m">1px</span> <span class="m">#666</span><span class="p">;</span>
	<span class="p">}</span>
<span class="nc">.button</span><span class="nd">:hover</span> <span class="p">{</span>
