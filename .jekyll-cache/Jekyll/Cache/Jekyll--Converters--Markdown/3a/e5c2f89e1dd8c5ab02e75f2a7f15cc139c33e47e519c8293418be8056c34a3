	<span class="nx">$</span><span class="p">(</span><span class="dl">"</span><span class="s2">.cb-enable</span><span class="dl">"</span><span class="p">).</span><span class="nx">click</span><span class="p">(</span><span class="kd">function</span><span class="p">(){</span>
